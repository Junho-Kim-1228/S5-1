<Window x:Class="CoilTrainingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coil Training UI"
        Width="1200" Height="800"
        MinWidth="1000" MinHeight="700"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <DockPanel>

        <!-- 상단 메뉴 -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Dataset"/>
            <MenuItem Header="Labeling"/>
            <MenuItem Header="Training"/>
            <MenuItem Header="Model"/>
        </Menu>

        <!-- 하단 로그 영역 -->
        <Border DockPanel.Dock="Bottom" Height="150" Background="#111">
            <TextBox Text="Log Output..."
                     Foreground="LightGray"
                     Background="#111"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"/>
        </Border>

        <!-- 메인 영역 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <!-- 좌측 -->
                <ColumnDefinition Width="*"/>
                <!-- 중앙 -->
                <ColumnDefinition Width="260"/>
                <!-- 우측 -->
            </Grid.ColumnDefinitions>

            <!-- 좌측: 데이터 탐색 -->
            <Border Grid.Column="0" Background="#333" Padding="5">
                <StackPanel>

                    <TextBlock Text="Dataset"
                   Foreground="White"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                    <ListBox x:Name="ImageListBox"
                 DisplayMemberPath="FileName"
                 SelectionChanged="ImageListBox_SelectionChanged"/>

                </StackPanel>
            </Border>

            <!-- 중앙: 이미지 뷰어 -->
            <Border Grid.Column="1" Background="#222">
                <ScrollViewer x:Name="ImageScrollViewer"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto"
                    PreviewMouseWheel="OnMouseWheelZoom">

                    <Canvas x:Name="ImageCanvas"
                                Background="#222"
                                RenderTransformOrigin="0,0"
                                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                                MouseMove="Canvas_MouseMove"
                                MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
                            <Canvas.RenderTransform>
                                <ScaleTransform x:Name="ImageScale"
                                    ScaleX="1.0"
                                    ScaleY="1.0"/>
                            </Canvas.RenderTransform>

                           <Image x:Name="MainImage"
                                Stretch="None"/>
                    </Canvas>

                </ScrollViewer>
            </Border>

            <!-- 우측: 속성 패널 -->
            <Border Grid.Column="2" Background="#F5F5F5" Padding="10">
                <StackPanel>

                    <TextBlock Text="Properties"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                    <!-- 선택된 박스 클래스 -->
                    <TextBlock Text="Class"
                   Margin="0,10,0,5"/>

                    <ComboBox x:Name="ClassComboBox"
                  SelectionChanged="ClassComboBox_SelectionChanged"
                  IsEnabled="False">
                        <ComboBoxItem Content="dent"/>
                        <ComboBoxItem Content="loose"/>
                    </ComboBox>

                    <!-- 확대/축소 버튼 -->
                    <TextBlock Text="View"
                   FontWeight="Bold"
                   Margin="0,20,0,5"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="＋" Width="40" Click="ZoomIn_Click"/>
                        <Button Content="－" Width="40" Margin="5,0,0,0" Click="ZoomOut_Click"/>
                    </StackPanel>

                    <Button Content="Save Label"
                        Margin="0,20,0,0"
                        Click="SaveLabel_Click"/>


                </StackPanel>
            </Border>


        </Grid>

    </DockPanel>
</Window>
